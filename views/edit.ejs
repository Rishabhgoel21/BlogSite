<% include partials/header %>

 <div class="ui huge centered header">
     Edit Blog
 </div>
 <div class="ui main text container segment">
 <h2><%= blog.title %></h2>
 <form class="ui form" action = "/blogs/<%= blog._id %>?_method=PUT" method = "POST">
      <div class="field">
        <label>Title</label>
        <input type="text" name="blog[title]" value="<%= blog.title %>">
      </div>
      <div class="field">
        <label>Image</label>
        <input type="text" name="blog[image]"  value="<%= blog.image %>">
      </div>
      <div class="field">
        <label>Body</label>
        <textarea name = "blog[body]" id = "summernote"><%= blog.body %></textarea>
      </div>
      <button class="ui blue inverted button" type="submit">Submit</button>
</form>
</div>

<% include partials/footer %>