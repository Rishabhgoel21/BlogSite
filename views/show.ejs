<% include partials/header %>

<div class="ui main text container segment">
 <div class="ui huge header">
      <%= blog.title %>
 </div>
 <div class="ui top attached segment">
   <div class = "item">
      <img class = "ui centered rounded image" src = "<%= blog.image %>">
   </div>
   
     <div class="content">
       <strong><span class="date"><%= blog.created.toDateString() %></span></strong>
     </div>
     <div class = "description">
       <p><%- blog.body %></p>
     </div>
     <a href = "/blogs/<%= blog._id %>/edit"class = "ui blue inverted button">
         Edit
     </a>
    <form class="ui form" action = "/blogs/<%= blog._id %>?_method=DELETE" method = "POST" id="delete">
     <button class = "ui red inverted button">
         Delete
     </button>
     </form>
   </div>
</div>

<% include partials/footer %>